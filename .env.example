MAX_DAILY_DRAWDOWN=0.05
MAX_LEVERAGE=5
MAX_OPEN_POSITIONS=3
SLIPPAGE_TOLERANCE=0.003

############################
# EXECUTION
############################
TX_GAS_MULTIPLIER=1.2
MAX_GAS_GWEI=120
MEV_PROTECTION=true
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

############################
# DATA SOURCES (READ-ONLY CEX)
############################
