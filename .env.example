OKX_WS_URL=wss://ws.okx.com:8443/ws/v5/public

############################
# STRATEGY ENGINE
############################
REGIME_DETECTION=true
FILTER_STACK_ENABLED=true
ADAPTIVE_RISK=true
SHADOW_TRADING=true

############################
# DATABASE
############################
